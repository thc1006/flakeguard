{
  "name": "flakeguard",
  "version": "1.0.0",
  "private": true,
  "description": "Production-grade monorepo for flakeguard",
  "engines": {
    "node": "^20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "flakeguard:init": "node packages/cli/src/bin/cli.js",
    "dev": "pnpm --parallel --filter='./apps/*' dev",
    "docs:dev": "pnpm --filter=@flakeguard/docs dev",
    "docs:build": "pnpm --filter=@flakeguard/docs build",
    "docs:serve": "pnpm --filter=@flakeguard/docs serve",
    "build": "pnpm --filter='./packages/*' build && pnpm --filter='./apps/*' build",
    "test": "pnpm --filter='./apps/*' --filter='./packages/*' test",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "migrate:dev": "pnpm --filter=@flakeguard/api migrate:dev",
    "migrate:deploy": "pnpm --filter=@flakeguard/api migrate:deploy",
    "typecheck": "pnpm --filter='./packages/*' --filter='./apps/*' typecheck",
    "clean": "pnpm --filter='./packages/*' --filter='./apps/*' clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "audit-ci": "^7.1.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-markdown": "^5.1.0",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.4.0",
    "inquirer": "^9.3.7",
    "license-checker": "^25.0.1",
    "mocha": "^10.8.2",
    "nyc": "^17.1.0",
    "ora": "^5.4.1",
    "prettier": "^3.6.2",
    "secretlint": "^8.4.0",
    "snyk": "^1.1293.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.0.0",
  "license": "Apache-2.0",
  "bin": {
    "flakeguard-init": "packages/cli/src/bin/cli.js"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@flakeguard/cli",
      "@flakeguard/shared"
    ],
    "overrides": {
      "next@>=13.4.0 <14.1.1": ">=14.1.1",
      "next@>=14.0.0 <14.2.10": ">=14.2.10",
      "next@>=10.0.0 <14.2.7": ">=14.2.7",
      "next@>=9.5.5 <14.2.15": ">=14.2.15",
      "next@>=14.0.0 <14.2.21": ">=14.2.21",
      "esbuild@<=0.24.2": ">=0.25.0",
      "next@<14.2.24": ">=14.2.24",
      "webpack-dev-server@<=5.2.0": ">=5.2.1",
      "next@>=13.0 <14.2.30": ">=14.2.30",
      "next@>=14.0.0 <14.2.25": ">=14.2.25",
      "tmp@<=0.2.3": ">=0.2.4"
    }
  }
}