# pnpm workspace configuration
auto-install-peers=true
prefer-workspace-packages=true
save-workspace-protocol=rolling
strict-peer-dependencies=false
registry=https://registry.npmjs.org/
prefer-offline=true
link-workspace-packages=true
inject-workspace-packages=true

# Memory and performance optimization
maxsockets=10
fetch-retries=5
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Hoisting and dependency management
public-hoist-pattern=*eslint*,*prettier*,*typescript*,*@types/*
shamefully-hoist=true
package-import-method=hardlink

# Docker deployment configuration
# Required for pnpm deploy in Docker builds with shared lockfiles
# See: https://github.com/pnpm/pnpm/issues/6269
force-legacy-deploy=true