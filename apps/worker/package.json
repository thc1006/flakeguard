{
  "name": "@flakeguard/worker",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "build": "tsc --project tsconfig.json",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:load": "node scripts/load-test.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t flakeguard-worker -f Dockerfile ../..",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f worker"
  },
  "dependencies": {
    "@flakeguard/shared": "workspace:*",
    "@prisma/client": "^5.8.1",
    "@octokit/rest": "^20.0.0",
    "@octokit/app": "^14.0.0",
    "bullmq": "^5.1.1",
    "cron": "^3.1.6",
    "ioredis": "^5.3.2",
    "node-stream-zip": "^1.15.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "prom-client": "^15.1.0",
    "sax": "^1.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@types/cron": "^2.0.1",
    "@types/node": "^20.11.0",
    "@types/sax": "^1.2.7",
    "commander": "^11.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  }
}