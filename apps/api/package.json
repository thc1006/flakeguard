{
  "name": "@flakeguard/api",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/server.ts",
    "build": "tsc --project tsconfig.json",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:github": "vitest run src/github",
    "test:policy": "vitest run src/policy",
    "test:ingestion": "vitest run src/ingestion",
    "test:analytics": "vitest run src/analytics",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "npm run test:unit && npm run test:integration",
    "test:benchmark": "vitest run --config vitest.benchmark.config.ts",
    "test:containers": "USE_TEST_CONTAINERS=true vitest run --config vitest.integration.config.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage test-results playwright-report test-results-* playwright/.cache",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "generate": "prisma generate",
    "studio": "prisma studio",
    "seed": "tsx prisma/seed.ts",
    "sample-queries": "tsx prisma/sample-queries.ts",
    "security:audit": "npm audit --audit-level high",
    "security:scan": "npx snyk test",
    "security:secrets": "npx secretlint '**/*'",
    "security:deps": "npx audit-ci --high",
    "security:docker": "docker scout cves --format sarif --output security-report.sarif",
    "security:test": "vitest run src/plugins/__tests__/security.test.ts",
    "security:all": "npm run security:audit && npm run security:deps && npm run security:test"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^3.1.0",
    "@flakeguard/shared": "workspace:*",
    "@octokit/app": "^14.1.0",
    "@octokit/rest": "^20.1.2",
    "@octokit/webhooks": "^12.3.2",
    "@octokit/webhooks-types": "^7.6.1",
    "@prisma/client": "^5.22.0",
    "@slack/bolt": "^3.22.0",
    "@slack/web-api": "^7.10.0",
    "fastify": "^4.29.1",
    "fastify-plugin": "^4.5.1",
    "minimatch": "^9.0.5",
    "node-stream-zip": "^1.15.0",
    "pino": "^8.21.0",
    "pino-pretty": "^10.3.1",
    "prom-client": "^15.1.3",
    "sax": "^1.4.1",
    "yaml": "^2.8.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testcontainers/postgresql": "^10.28.0",
    "@testcontainers/redis": "^10.28.0",
    "@types/node": "^20.19.11",
    "@types/sax": "^1.2.7",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "ioredis-mock": "^8.9.0",
    "msw": "^2.10.5",
    "nock": "^13.5.6",
    "playwright": "^1.55.0",
    "prisma": "^5.22.0",
    "supertest": "^6.3.4",
    "testcontainers": "^10.28.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^1.6.1",
    "vitest-mock-extended": "^1.3.2"
  }
}